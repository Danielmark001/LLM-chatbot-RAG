# Core Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Azure OpenAI Configuration
AZURE_ENDPOINT=https://your-azure-openai-endpoint.openai.azure.com/
OPENAI_API_KEY=your-azure-openai-api-key
AZURE_DEPLOYMENT=your-deployment-name

# Azure Services
AZURE_CONN_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net

# Azure Cognitive Search (Legacy support)
AZURE_COGNITIVE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_COGNITIVE_SEARCH_API_KEY=your_search_api_key

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=exam-prep-chatbot

# MongoDB (if using legacy features)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/
MONGODB_DATABASE_NAME=exam_chatbot

# Advanced Features Configuration

# Hybrid Retrieval Settings
HYBRID_DENSE_WEIGHT=0.4
HYBRID_SPARSE_WEIGHT=0.3
HYBRID_COLBERT_WEIGHT=0.3
ENABLE_QUERY_COMPRESSION=true
ENABLE_RERANKING=true

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002
MISTRAL_BASE_MODEL=mistralai/Mistral-7B-Instruct-v0.1

# Fine-tuning Configuration
MISTRAL_LORA_R=16
MISTRAL_LORA_ALPHA=32
MISTRAL_LORA_DROPOUT=0.1
MISTRAL_LEARNING_RATE=2e-4
MISTRAL_BATCH_SIZE=4
MISTRAL_EPOCHS=3

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
ENABLE_CACHING=true
CACHE_TTL=3600

# Evaluation Settings
TARGET_QUERY_COMPREHENSION=92.0
EVALUATION_BATCH_SIZE=10
ENABLE_AUTO_EVALUATION=false

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
API_KEY_REQUIRED=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/exam_chatbot.log
ENABLE_FILE_LOGGING=true

# Document Processing
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_FILE_TYPES=pdf,txt,docx
PROCESSING_WORKERS=4
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Development Settings
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_ENDPOINTS=true
MOCK_EXTERNAL_APIS=false